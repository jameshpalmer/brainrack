{
	"name": "client",
	"private": true,
	"version": "0.1.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "tsc && vite build",
		"build:server": "cd ../server && pnpm run build",
		"preview": "vite preview",
		"clean": "rm -rf ./dist; mkdir -p ./dist",
		"prod": "cp -r ./dist/ ../server/dist/; cd ../server; pnpm run prod",
		"server": "cd ../server && pnpm run dev",
		"watch": "concurrently --kill-others 'pnpm run server' 'sleep 3; pnpm run dev'"
	},
	"dependencies": {
		"@vitejs/plugin-react": "^4.3.1",
		"pusher-js": "8.4.0-rc2",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"replicache-react": "5.0.1",
		"shared": "workspace:*",
		"vite": "^5.4.2"
	},
	"devDependencies": {
		"@biomejs/biome": "1.8.3",
		"@types/react": "^18.3.5",
		"@types/react-dom": "^18.3.0",
		"concurrently": "^7.6.0",
		"typescript": "^5.5.4"
	}
}

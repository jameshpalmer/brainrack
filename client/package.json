{
	"name": "client",
	"private": true,
	"version": "0.1.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "tsc && vite build",
		"build:server": "cd ../server && pnpm run build",
		"preview": "vite preview",
		"clean": "rm -rf ./dist; mkdir -p ./dist",
		"prod": "cp -r ./dist/ ../server/dist/; cd ../server; pnpm run prod",
		"server": "cd ../server && pnpm run dev",
		"watch": "concurrently --kill-others 'pnpm run server' 'sleep 3; pnpm run dev'"
	},
	"dependencies": {
		"@tanstack/react-router": "^1.64.0",
		"@vitejs/plugin-react": "^4.3.2",
		"nanoid": "^5.0.7",
		"nodemon": "^3.1.7",
		"pusher-js": "8.4.0-rc2",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"replicache-react": "5.0.1",
		"shared": "workspace:*",
		"vite": "^5.4.8"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.3",
		"@tanstack/router-devtools": "^1.64.0",
		"@tanstack/router-plugin": "^1.64.0",
		"@types/react": "^18.3.11",
		"@types/react-dom": "^18.3.1",
		"concurrently": "^9.0.1",
		"typescript": "^5.6.3"
	}
}
